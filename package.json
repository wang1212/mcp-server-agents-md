  "homepage": "https://github.com/wang1212/mcp-server-agents-md#readme",
  "bugs": {
    "url": "https://github.com/wang1212/mcp-server-agents-md/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wang1212/mcp-server-agents-md.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "license": "MIT",
  "author": {
    "name": "wang1212",
    "url": "https://github.com/wang1212"
  },
  "type": "module",
  "bin": {
